@model Levelnis.Learning.AutofacExamples.Web.CommandQuery.ViewModels.SignInViewModel

@{
    ViewBag.Title = "Levelnis Learning Series: Sign In Example";
}

<div class="row">
    <div class="col-xs-6">
        @using (Html.BeginForm("SignIn", "Security", FormMethod.Post, new { name = "signInForm", role = "form" }))
        {
            <h2>Sign in</h2>
            <p>Here's a quick example that shows the dependencies are hooked up in this project. Feel free to browse around and use the code as you see fit :)</p>
            <ul>
                <li>Sign in with a username of <strong>"dave"</strong> and any password. You'll get redirected to the index page (but nothing else will happen!)</li>
                <li>Sign in with any other details and you'll see an error message.</li>
            </ul>
            <p>That's it! There's no real signing in taking place...</p>
            <div id="SignInError" class="alert alert-danger">@Model.SignInError</div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
                </div>
                <br>
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                </div>
                <div class="checkbox pull-left">
                    <label>
                        @Html.CheckBoxFor(m => m.RememberMe) Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary pull-right" id="SignInAction">Sign in</button>
                <div class="clearfix"></div>
            </div>
        }


    </div>
</div>